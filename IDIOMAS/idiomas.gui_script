function init(self)
	msg.post("@render:", "clear_color", { color = vmath.vector4(46/255, 43/255, 54/255, 0) } )
	msg.post("", "acquire_input_focus")
	--
	self.esp = gui.get_node("esp");
	self.eng = gui.get_node("eng");

end

